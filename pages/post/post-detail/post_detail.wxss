/* pages/post/post-detail/post_detail.wxss */
.detail-container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width:100%;
  height:450rpx;
}
.author-date{
  flex-direction: row;
  margin-top:20rpx;
  margin-left:10rpx;
}
.avatar{
  width:64rpx;
  height:64rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left:20rpx;
  vertical-align: middle;
  color:#666;
}
.const-text{
  font-size: 24rpx;
  margin-left:20rpx;
  color:#999;
}
.date{
  font-size:26rpx;
  margin-left:30rpx;
  color:#999;
  vertical-align: middle;
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  color:#4b556c;
  margin-top: 10px;
  margin-left:20px;
}
.tool{
  margin-top:20rpx;
}
.circle-img{
  float:right;
  margin-right:40rpx;
  vertical-align: middle;
}

.circle-img Image{
  width:90rpx;
  height:90rpx;
}

.share-img{
  margin-left:30rpx;
}

.horizon{
  width:660rpx;
  height:1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top:46rpx;
  margin: 0 auto;
  z-index: -99;

}

.font-detail{
  color:#666;
  margin-left: 30rpx;
  margin-top:20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.audio{
  width:102rpx;
  height:110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top:180rpx;
  opacity: 0.6;
}